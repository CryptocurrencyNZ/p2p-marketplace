# Database Configuration
# Use PostgreSQL connection string
DATABASE_URL=postgres://username:password@hostname:port/database?sslmode=require

# For connections without pgbouncer
DATABASE_URL_UNPOOLED=postgresql://username:password@hostname:port/database?sslmode=require

# Auth Secret (generate with: pnpm exec auth secret)
AUTH_SECRET=your_auth_secret_here

# Optional: Web3 Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# Optional: Public API Keys (ok to expose in browser)
NEXT_PUBLIC_API_KEY=your_public_api_key 